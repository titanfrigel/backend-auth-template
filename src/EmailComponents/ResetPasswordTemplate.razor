@using BackendAuthTemplate.EmailComponents.Shared
@namespace BackendAuthTemplate.EmailComponents
@inherits ComponentBase

<div style="@Styles.Wrapper">
  <div style="@Styles.Card">

      <h1>Réinitialisation du mot de passe 🔒</h1>
      <p>Nous avons reçu une demande pour réinitialiser votre mot de passe.  
         Cliquez sur le bouton ci-dessous :</p>

      <a href="@ResetUrl"
         style="@($"{Styles.Button};background:#DC3545;color:#fff")">
          Réinitialiser mon mot de passe
      </a>

      <NoReplyDisclaimer />

      <div style="@Styles.Footer">
          Ce lien est valable pendant @ValidMinutes minutes.<br/><br/>
          Si vous n'avez pas demandé cette réinitialisation, ignorez cet e-mail.
      </div>

  </div>
</div>

@code {
    [Parameter, EditorRequired] public string ResetUrl { get; set; } = default!;
    [Parameter, EditorRequired] public int ValidMinutes { get; set; } = default!;
}
