{
  "$schema": "http://json.schemastore.org/template",
  "author": "GaÃ«tan Kling",
  "classifications": ["Clean Architecture"],
  "identity": "BackendAuth.CommandTemplate",
  "name": "CQRS Command Template",
  "shortName": "cqrs-command",
  "sourceName": "BackendAuthTemplate",
  "preferNameDirectory": false,
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "symbols": {
    "CommandName": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "CommandName",
      "fileRename": "CommandName",
      "displayName": "Command Name",
      "description": "The name of the command to be created."
    },
    "FeatureName": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "FeatureName",
      "fileRename": "FeatureName",
      "displayName": "Feature Name",
      "description": "The name of the feature this command belongs to."
    },
    "EntityName": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "EntityName",
      "fileRename": "EntityName",
      "displayName": "Entity Name",
      "description": "The name of the entity this command uses."
    },

    "commandName": {
      "type": "derived",
      "valueSource": "CommandName",
      "valueTransform": "firstLowerCase",
      "replaces": "commandName",
      "fileRename": "commandName"
    },
    "featureName": {
      "type": "derived",
      "valueSource": "FeatureName",
      "valueTransform": "firstLowerCase",
      "replaces": "featureName",
      "fileRename": "featureName"
    },
    "entityName": {
      "type": "derived",
      "valueSource": "EntityName",
      "valueTransform": "firstLowerCase",
      "replaces": "entityName",
      "fileRename": "entityName"
    }
  }
}
